{
  "title": "trackpoint",
  "rules": [
    {
      "description": "shift drag scroll mode",
      "manipulators": [
        {
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": {
            "key_code": "left_shift",
            "lazy": true
          },
          "to_if_alone": [
            {
              "key_code": "delete_or_backspace"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_option"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
