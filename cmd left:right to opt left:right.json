{
  "title": "cmd left:right to opt left:right",
  "rules": [
    {
      "description": "cmd left:right to opt left:right",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "com.citrix.receiver.icaviewer.mac"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_command"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "left_option"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "com.citrix.receiver.icaviewer.mac"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_command"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "left_option"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
